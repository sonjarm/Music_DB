<h1>Happy Birthday!!</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birthdate</th>
      <th>Date</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trust_times.each do |trust_time| %>
      <tr>
        <td><%= trust_time.Happy_Birthday %></td>
        <td><%= trust_time.notes %></td>
        <td><%= trust_time.birthdate %></td>
        <td><%= trust_time.done %></td>
        <td><%= link_to 'Show', trust_time %></td>
        <td><%= link_to 'Edit', edit_trust_time_path(trust_time) %></td>
        <td><%= link_to 'Destroy', trust_time, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trust time', new_trust_time_path %>
